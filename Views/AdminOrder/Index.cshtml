@model List<OrderAdminViewModel>

@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "_AdminLayout";
}

<h2>Danh sách đơn hàng</h2>
<a class="btn btn-primary mb-3" href="/AdminOrder/Export">Xuất Excel</a>
<table class="table table-bordered mt-4">
    <thead class="table-dark">
        <tr>
            <th>Mã đơn</th>
            <th>Người đặt</th>
            <th>Địa chỉ</th>
            <th>Thời gian</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.FullName</td>
                <td>@order.Addr</td>
                <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@order.TotalAmount.ToString("N0") đ</td>
                <td>
                    @{
                        var statusText = order.OrderStatus switch
                        {
                            "Pending" => "Chờ xử lý",
                            "Paid" => "Đã hoàn thành",
                            "Cancelled" => "Đã hủy",
                            _ => "Không rõ"
                        };
                    }
                    <span>@statusText</span>
                </td>

                <td>
                    <a href="/AdminOrder/Detail/@order.OrderId" class="btn btn-sm btn-info mb-1">Xem chi tiết</a>

                    @if (order.OrderStatus == "Pending")
                    {
                        <form method="post" action="/AdminOrder/UpdateStatus" style="display:inline;">
                            <input type="hidden" name="id" value="@order.OrderId" />
                            <input type="hidden" name="status" value="Paid" />
                            <button type="submit" class="btn btn-sm btn-success mb-1">Hoàn thành</button>
                        </form>

                        <form method="post" action="/AdminOrder/UpdateStatus" style="display:inline;">
                            <input type="hidden" name="id" value="@order.OrderId" />
                            <input type="hidden" name="status" value="Cancelled" />
                            <button type="submit" class="btn btn-sm btn-danger">Hủy</button>
                        </form>
                    }
                    else if (order.OrderStatus == "Paid")
                    {
                        <button class="btn btn-sm btn-outline-success" disabled>Đã hoàn thành</button>
                    }
                    else if (order.OrderStatus == "Cancelled")
                    {
                        <button class="btn btn-sm btn-outline-danger" disabled>Đã hủy</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
