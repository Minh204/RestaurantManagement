@{
    Layout = "_AdminLayout";
}
<link rel="stylesheet" href="~/css/staffIndex.css"  asp-append-version="true"/>

<div class="admin-dashboard">
    <div class="welcome-section">
        <h1 class="welcome-title">
            Chào mừng <span class="employee-name">@ViewBag.FullName</span>
        </h1>
        <p class="welcome-subtitle">
            Chúc bạn một ngày làm việc vui vẻ tại <span class="restaurant-name">Dola Restaurant</span>!
        </p>
    </div>

    <div class="dashboard-grid">
        <div class="dashboard-card card-tables">
            <div class="card-icon">
                🍽️
            </div>
            <h3 class="card-title">Quản lý Bàn ăn</h3>
            <p class="card-description">
                Theo dõi và quản lý tình trạng các bàn ăn trong nhà hàng
            </p>
            <a href="/table/index" class="card-link">
                Xem bàn ăn
            </a>
        </div>

        <div class="dashboard-card card-bookings">
            <div class="card-icon">
                📅
            </div>
            <h3 class="card-title">Đặt bàn</h3>
            <p class="card-description">
                Xem và quản lý các yêu cầu đặt bàn từ khách hàng
            </p>
            <a href="/bookingadmin/bookinglist" class="card-link">
                Quản lý đặt bàn
            </a>
        </div>

        <div class="dashboard-card card-orders">
            <div class="card-icon">
                🛍️
            </div>
            <h3 class="card-title">Đơn hàng</h3>
            <p class="card-description">
                Theo dõi và xử lý các đơn hàng của khách hàng
            </p>
            <a href="/AdminOrder/Index" class="card-link">
                Xem đơn hàng
            </a>
        </div>

        <div class="dashboard-card card-home">
            <div class="card-icon">
                🏠
            </div>
            <h3 class="card-title">Trang chủ</h3>
            <p class="card-description">
                Quay về trang chủ website của nhà hàng
            </p>
            <a href="/" class="card-link">
                Về trang chủ
            </a>
        </div>
    </div>
</div>